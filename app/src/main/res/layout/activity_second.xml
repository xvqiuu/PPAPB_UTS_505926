<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/blue"
    >


    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to "
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/text_welcome1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kalori Kehidupan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/image_welcome"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ikon"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Kalori Kehidupan adalah aplikasi yang membantu pengguna memonitoring asupan kalori setiap harinya. Ini memungkinkan pengguna untuk mencatat makanan dan minuman yang mereka konsumsi, melakukan perhitungan kalori, dan mengatur tujuan kesehatan seperti penurunan berat badan atau pemantauan kesehatan secara umum. Aplikasi ini seringkali menyediakan database makanan, grafik, dan pengingat untuk membantu pengguna dalam pengelolaan pola makan mereka."
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Next"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/old_blue"
        />


</LinearLayout>