<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthActivity"
    android:orientation="vertical"
    android:background="@color/blue"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="56dp"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Kartu pertama -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:background="@drawable/bakso"
                    android:orientation="vertical"
                    >

                    <!-- Isi kartu -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Bakso"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Jumlah Kalori: 444 kkal"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartu kedua -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:background="@drawable/nasgor"
                    android:orientation="vertical">

                    <!-- Isi kartu -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Nasi Goreng"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Jumlah Kalori: 267 kkal"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartu ketiga -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:background="@drawable/soto"
                    android:orientation="vertical">

                    <!-- Isi kartu -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Soto Ayam"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Jumlah Kalori: 250 kkal"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartu keempat -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:background="@drawable/naspad"
                    android:orientation="vertical">

                    <!-- Isi kartu -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Nasi Padang"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Jumlah Kalori: 500 kkal"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartu kelima -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:background="@drawable/sate"
                    android:orientation="vertical">

                    <!-- Isi kartu -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Sate Ayam"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Jumlah Kalori: 383 kkal"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/old_blue"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <TextView
            android:id="@+id/txt_remaincalory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sisa Kalori         "
            android:textSize="17sp"
            android:padding="8dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/view_remaincalory"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/border"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/txt_consumcalory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konsumsi Kalori"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/view_consumcalory"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/border"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <!-- Kartu pertama -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Rincian Kalori 1"
                        android:textColor="@color/old_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:layout_margin="10dp"
                        android:textColor="@color/old_blue"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartu kedua -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Rincian Kalori 2"
                        android:textColor="@color/old_blue"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartu ketiga -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Rincian Kalori 3"
                        android:textColor="@color/old_blue"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btn_backk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/old_blue"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_toinput"
            android:text="Input Data"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/old_blue"
            />

    </LinearLayout>

</LinearLayout>